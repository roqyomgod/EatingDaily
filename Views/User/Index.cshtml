@{
        ViewData["Title"] = "Your Profile";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>EatingDaily</title>
    <link rel="stylesheet" href="~/css/style-prof.css">
    <link rel="stylesheet" href="~/css/style-sourse.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0; /* Убираем отступы */
            height: 100%;
            background-image: url(images/foto.jpg); /* Путь к фоновому изображению */
            background-position: center;
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="validation" style="text-align:center;">
        <div class="user" style="text-align:center;">
            <div class="user-content polyproz">
                <h1 style="font-family: 'Caveat', cursive;  font-size: 60px; color: black; text-align:center;">Ваш профиль</h1>
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" value="@ViewBag.Profile.ID" name="ID" />
                    <div class="user-name"><input type="text" name="Name" value="@ViewBag.Profile.Name" placeholder="Имя"></div>
                    <div class="user-surname"><input type="text" name="LastName" value="@ViewBag.Profile.LastName" placeholder="Фамилия"></div>
                    <div class="user-telephone"><input type="text" name="Phone" value="@ViewBag.Profile.Phone" placeholder="Номер"></div>
                    @if (ViewBag.Profile.Age != 0)
                    {
                        <div class="user-age"><input type="text" name="Age" value="@ViewBag.Profile.Age" placeholder="Возраст"></div>
                    }
                    else
                    {
                        <div class="user-age"><input type="text" name="Age" value="" placeholder="Возраст"></div>
                    }
                    <div class="user-sub"><input type="submit" name="" placeholder="Отправить"></div>
                    <a class="logout" href="~/account/logout">Выход</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>