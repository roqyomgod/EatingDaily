@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>ToDoBook</title>
	<link rel="stylesheet" href="css/style-prof.css">
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
</head>
<body>
	<header class="header">
		<div class="header-logo">ToDoBook</div>
		<div class="container-logo">
			<img src="~/image/book.svg" alt="">
		</div>
		<nav class="nav">
			<a class="nav_link" href="/Home">Главная</a>
			<a class="nav_link" href="~/User">Профиль</a>
			<a class="nav_link" href="~/User/RequestDiary">Рацион</a>
			<a class="nav_link" href="/Home">О нас</a>
			<a class="nav_link" href="User/News">Новости</a>
		</nav>
	</header>
	<div class="mainstr">
		<div class="user">
			<div class="avatar">
				@if (ViewBag.Avatar != null)
				{
					<img width="100px" height="100px" src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Avatar))" />
				}else
				{ 
					<img src="image/book.svg" width="100px" height="100px">
				}
			</div>
			<div class="user-content">
				<form method="post" enctype="multipart/form-data">
					<input type="hidden" value="@ViewBag.Profile.ID" name="ID" />
					<div class="user-name"><input type="text" name="Name" value="@ViewBag.Profile.Name" placeholder="Имя"></div>
					<div class="user-surname"><input type="text" name="LastName" value="@ViewBag.Profile.LastName" placeholder="Фамилия"></div>
					<div class="user-telephone"><input type="text" name="Phone" value="@ViewBag.Profile.Phone" placeholder="Номер"></div>
					<div class="user-age"><input type="text" name="Age" value="@ViewBag.Profile.Age" placeholder="Возраст"></div>
					<input name="Avatar" type="file" class="form-control" />
					<div class="user-sub"><input type="submit" name="" placeholder="Отправить"></div>
				</form>
			</div>
		</div>
		<div class="footer"><div class="copy">Все права защищены &copy; 2021 ToDoBook</div></div>
	</div>

</body>

</html>