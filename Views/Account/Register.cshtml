@model EatingDaily.Storage.ViewModels.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Авторизация</title>
    <link rel="stylesheet" href="~/css/style-reg.css">
    <style>
        form {
            width: inherit;
            background-image: url(images/foto.jpg); /* Путь к фоновому изображению */
        }
    </style>
</head>
<body>
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="Register">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <h1>Регистрация</h1>
            <div>
                <input type="text" asp-for="Email" placeholder="Электронная почта" />
                <span asp-validation-for="Email" />
            </div>
            <div>
                <input type="password" asp-for="Password" placeholder="Пароль" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <input type="password" asp-for="ConfirmPassword" placeholder="Подтвердите пароль" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <input type="submit" value="Регистрация" />
            </div>
        </div>
    </form>
</body>

</html>